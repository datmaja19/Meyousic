<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2sp"
    android:paddingBottom="2sp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageview"
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_marginLeft="14.3sp"
            android:src="@drawable/albumlist" />

        <LinearLayout
            android:id="@+id/mainly"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            <customfonts.MyTextView_Poppins_Regular
                android:id="@+id/txttitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="14sp"
                android:textColor="#4f4f4f"
                android:text="Heartless"
                />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="2sp">

            <customfonts.MyTextView_Poppins_Regular
                android:id="@+id/txtartists"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="10sp"
                android:maxLines="1"
                android:maxLength="20"
                android:textColor="#c9c9c9"
                android:text="Badshah ft. Astha Gill"
                />

            <customfonts.MyTextView_Poppins_Regular
                android:id="@+id/txtduration"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10sp"
                android:gravity="center_horizontal"
                android:text="03:30"
                android:textColor="#c9c9c9"
                android:textSize="11.7sp" />
            </LinearLayout>

        </LinearLayout>



        <ImageView
            android:id="@+id/addtoplaylists"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="14.3sp"
            android:src="@drawable/ic_playlist_add_black_24dp" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="57.3sp"
        android:layout_marginRight="28sp"
        android:background="#f1f1f1"/>

</LinearLayout>