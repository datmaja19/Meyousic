<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2sp"
    android:paddingBottom="2sp"
    android:id="@+id/lyoffline"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="45sp"
            android:layout_height="45sp"
            android:layout_marginLeft="14.3sp"
            android:src="@drawable/iconapp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

            <customfonts.MyTextView_Poppins_Regular
                android:id="@+id/txttitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="14sp"
                android:textColor="#4f4f4f"
                android:text="All offline songs"
                />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="2sp">

            <customfonts.MyTextView_Poppins_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:textColor="#8b8b8b"
                android:id="@+id/size"
                android:gravity="center_horizontal"
                android:text="Local"
                />

            </LinearLayout>>

        </LinearLayout>

        <ImageView
            android:layout_width="7sp"
            android:layout_height="12.7sp"
            android:layout_gravity="center"
            android:layout_marginRight="21sp"
            android:layout_marginLeft="10sp"
            android:src="@drawable/grey_arrow"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginTop="5sp"
        android:layout_marginLeft="57.3sp"
        android:layout_marginRight="28sp"
        android:background="#f1f1f1"/>

</LinearLayout>