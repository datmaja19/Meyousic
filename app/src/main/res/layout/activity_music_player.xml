<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MusicPlayerActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="350sp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="294sp"
            android:scaleType="fitXY"
            android:src="@drawable/music_bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp">

            <ImageView
                android:layout_width="10sp"
                android:layout_height="15.5sp"
                android:layout_marginLeft="17.7sp"
                android:src="@drawable/backarrow"/>

            <ImageView
                android:layout_width="20sp"
                android:layout_height="19sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="17.5sp"
                android:src="@drawable/playlist"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="180sp"
            android:layout_height="180sp"
            app:civ_border_width="10sp"
            android:layout_marginTop="40sp"
            app:civ_border_color="#FFFFFF"
            android:layout_gravity="bottom|center_horizontal"
            android:src="@drawable/starboy_img" />


        </LinearLayout>


    </FrameLayout>



        <customfonts.MyTextView_Poppins_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#4f4f4f"
            android:textSize="23.3sp"
            android:layout_marginBottom="-3sp"
            android:textAlignment="center"
            android:layout_marginTop="40sp"
            android:layout_gravity="center_horizontal"
            android:text="Startboy"/>

        <customfonts.MyTextView_Poppins_Medium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#c9c9c9"
            android:textSize="11.7sp"
            android:text="The Weekend"/>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:orientation="vertical">


        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="7sp"
            android:minWidth="7sp"
            android:maxHeight="7sp"
            android:maxWidth="7sp"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:thumb="@drawable/custom_thunb"
            android:progressDrawable="@drawable/seekbar_style"
            android:splitTrack="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35sp"
            android:layout_marginRight="40sp"
            android:layout_marginTop="3sp"
            android:layout_marginBottom="50.3sp"
            android:orientation="horizontal">

            <customfonts.MyTextView_Poppins_Regular
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="13.5sp"
                android:paddingLeft="5sp"
                android:textColor="#d9d6d6"
                android:text="0:00"/>



            <customfonts.MyTextView_Poppins_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13.5sp"
                android:textColor="#d9d6d6"
                android:text="3:52"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20sp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">

            <ImageView
                android:layout_width="19sp"
                android:layout_height="16sp"
                android:layout_gravity="center"
                android:src="@drawable/shuffle"/>


</LinearLayout>
            <ImageView
                android:layout_width="22.5sp"
                android:layout_height="16sp"
                android:layout_gravity="center"
                android:src="@drawable/backward"/>

            <ImageView
                android:layout_width="53sp"
                android:layout_height="53sp"
                android:layout_marginLeft="19sp"
                android:layout_marginRight="19sp"
                android:src="@drawable/play2"/>

            <ImageView
                android:layout_width="22.5sp"
                android:layout_height="16sp"
                android:layout_gravity="center"
                android:src="@drawable/forward"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center"
                    android:src="@drawable/repeat"/>
            </LinearLayout>






        </LinearLayout>


    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>